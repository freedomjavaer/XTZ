<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/top_title"/>

    <ScrollView
        android:id="@+id/activity_continual_tally_for_filter_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/continual_tally_bg"
        android:fillViewport="true"
        android:focusableInTouchMode="false"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_continual_tally_for_filter_tv_clear_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="17dp"
                android:text="@string/continual_tally_for_filter_clear_conditions"
                android:textColor="@color/continual_tally_filter_text_blue"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_all_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="@android:color/white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/continual_tally_for_filter_all_type"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/activity_continual_tally_for_filter_iv_all_type"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selected"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_type_invest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp">

                <View
                    android:id="@+id/activity_continual_tally_for_filter_v_green"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/shape_rectangle_continual_tally_for_filter_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/activity_continual_tally_for_filter_v_green"
                    android:text="@string/continual_tally_for_filter_type_invest"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/activity_continual_tally_for_filter_iv_type_invest"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/selected"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">

                <View
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_type_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp">

                <View
                    android:id="@+id/activity_continual_tally_for_filter_v_red"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/shape_rectangle_continual_tally_for_filter_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/activity_continual_tally_for_filter_v_red"
                    android:text="@string/continual_tally_for_filter_type_back"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/activity_continual_tally_for_filter_iv_type_back"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/selected"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">

                <View
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_last_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/continual_tally_for_filter_only_show_last_back"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/activity_continual_tally_for_filter_iv_last_back"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/btn_046"/>

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:minHeight="20dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_continual_tally_for_filter_tv_last_back_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/continual_tally_for_filter_only_show_last_back_content"
                    android:textColor="@color/continual_tally_filter_text_last_back_gray"
                    android:textSize="13sp"/>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_all_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="@android:color/white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/continual_tally_for_filter_all_time"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/activity_continual_tally_for_filter_iv_all_time"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selected"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_time_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/continual_tally_for_filter_time_from"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="-10dp"
                    android:src="@drawable/btn_009"/>

                <TextView
                    android:id="@+id/activity_continual_tally_for_filter_tv_time_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/continual_tally_text_gray"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_time_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/continual_tally_for_filter_time_end"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="-10dp"
                    android:src="@drawable/btn_009"/>

                <TextView
                    android:id="@+id/activity_continual_tally_for_filter_tv_time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/continual_tally_text_gray"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_continual_tally_for_filter_rl_select_platform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/continual_tally_for_filter_select_platform"
                    android:textColor="@color/continual_tally_text_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="-10dp"
                    android:src="@drawable/btn_009"/>

                <TextView
                    android:id="@+id/activity_continual_tally_for_filter_tv_select_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="@string/continual_tally_for_filter_all_platform"
                    android:textColor="@color/continual_tally_text_gray"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>