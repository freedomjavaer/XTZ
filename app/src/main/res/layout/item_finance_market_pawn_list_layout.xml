<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_pawn_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:selectableItemBackground"
              android:orientation="vertical"
              android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:textColor="@color/c"
            android:textSize="14sp"
            android:id="@+id/tv_pawn_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:text="2.1公里"/>

        <TextView
            android:id="@+id/tv_pawn_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/tv_pawn_distance"
            android:singleLine="true"
            android:text="深圳典当"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pawn_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:padding="4dp"
        android:textColor="@color/c"
        android:textSize="14sp"
        android:singleLine="true"
        android:text="深圳南山100号"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:text="联系电话:"
            android:layout_marginLeft="40dp"
            android:padding="4dp"
            android:textColor="@color/c"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_pawn_tel"
            android:text="13814140202"
            android:padding="4dp"
            android:textColor="@color/c"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_begin_to_target"
            android:text="到此去"
            android:textSize="14sp"
            android:textColor="@color/a"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/pawn_list_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f"/>

</LinearLayout>
