<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/style_current_title">

        <ImageView
            android:id="@+id/iv_my_invest_three_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/three_blue_posint"/>

        <com.ypwl.xiaotouzi.view.RadioTab
            android:id="@+id/rt_returned_assets"
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_my_invest_tally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:padding="10dp"
            android:src="@mipmap/pic_account"/>

    </RelativeLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/e"/>-->

    <RelativeLayout
        android:id="@+id/fl_returned_assets_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
