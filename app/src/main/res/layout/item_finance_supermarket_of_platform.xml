<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_rectangle_item_bg_finance_supermarket_of_platform"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/item_finance_supermarket_of_platform_iv_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/cal_share_my_mobel_image_bg"
            android:padding="1dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/item_finance_supermarket_of_platform_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/item_finance_supermarket_of_platform_iv_logo"
            android:singleLine="true"
            android:textColor="@color/finance_supermarket_platform_text_black"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_finance_supermarket_of_platform_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_finance_supermarket_of_platform_iv_logo"
            android:layout_toRightOf="@id/item_finance_supermarket_of_platform_iv_logo"
            android:singleLine="true"
            android:textColor="@color/finance_supermarket_platform_text_black"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/item_finance_supermarket_of_platform_iv_renzheng"
            android:layout_width="85dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/pic_shipingrenzheng"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/finance_supermarket_platform_line"/>

    <ImageView
        android:id="@+id/item_finance_supermarket_of_platform_iv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        />

</LinearLayout>