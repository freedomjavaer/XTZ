<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="15dp">

        <RadioGroup
            android:id="@+id/radio_tab_invest_analysis_by_fenbu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <RadioButton
                android:id="@+id/rb_fenbu_platform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_radiotab_bg_left_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="平台"
                android:textColor="@color/selector_color_my_invest_assets_analyze_txt"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_fenbu_cycle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_radiotab_bg_middle_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="周期"
                android:textColor="@color/selector_color_my_invest_assets_analyze_txt"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_fenbu_annualize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_radiotab_bg_middle_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="年化率"
                android:textColor="@color/selector_color_my_invest_assets_analyze_txt"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_fenbu_return_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/base_radiotab_bg_right_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="还款方式"
                android:textColor="@color/selector_color_my_invest_assets_analyze_txt"
                android:textSize="12sp"/>

        </RadioGroup>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_invest_analysis_by_fenbu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>
