<?xml version="1.0" encoding="utf-8"?>
<com.ypwl.xiaotouzi.view.swipelistview.SwipeLayout
    android:id="@+id/invest_assets_history_swipelayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:layout_gravity="center_vertical"
    android:background="@color/bg_window"
    android:minHeight="77dp"
   >
    <com.ypwl.xiaotouzi.view.swipelistview.FrontLayout
        android:id="@+id/layout_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_color_bg_gray_white"
        android:paddingBottom="8dp"
        >

        <LinearLayout
            android:id="@+id/layout_left_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_p_name"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="诚汇通"
                    android:singleLine="true"
                    android:textColor="@color/c"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/item_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/item_return_time"
                    android:layout_toRightOf="@+id/item_p_name"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="16-3-15"
                    android:textColor="@color/c"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_return_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="2016/4/15结束"
                    android:textColor="@color/d"
                    android:textSize="11sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#00C000"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:text="投资"
                        android:textColor="@color/d"
                        android:textSize="11sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/c"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:text="收益"
                        android:textColor="@color/d"
                        android:textSize="11sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/c"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:text="年化率"
                        android:textColor="@color/d"
                        android:textSize="11sp"
                        android:textIsSelectable="false"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.ypwl.xiaotouzi.view.swipelistview.FrontLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"/>
    </LinearLayout>

</com.ypwl.xiaotouzi.view.swipelistview.SwipeLayout>