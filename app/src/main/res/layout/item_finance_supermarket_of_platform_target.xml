<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/selector_color_bg_gray_white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_finance_supermarket_of_platform_target_iv_jiaxitype"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="135dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/item_finance_supermarket_of_platform_target_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="24dp"
                android:textColor="@color/item_finance_supermarket_of_platform_target_tv_name"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_finance_supermarket_of_platform_target_tv_yield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/item_finance_supermarket_of_platform_target_tv_num_black"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/item_finance_supermarket_of_platform_target_tv_yield"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/item_finance_supermarket_of_platform_target_tv_yield"
                        android:text="@string/keep_accounts_btn_per_cent"
                        android:textColor="@color/item_finance_supermarket_of_platform_target_tv_num_black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_finance_supermarket_of_platform_target_tv_yield"
                        android:layout_marginTop="8dp"
                        android:text="@string/finance_supermarket_target_list_yield_info"
                        android:textColor="@color/item_finance_supermarket_of_platform_target_tv_gray"
                        android:textSize="12sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_finance_supermarket_of_platform_target_rl_jiaxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/item_finance_supermarket_of_platform_target_tv_jia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/finance_supermarket_target_list_plus_sign"
                        android:textColor="@color/item_finance_supermarket_of_platform_target_tv_gray"
                        android:textSize="20dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/item_finance_supermarket_of_platform_target_tv_jia"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/item_finance_supermarket_of_platform_target_ll_jiaxi_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/item_finance_supermarket_of_platform_target_tv_jiaxi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/item_finance_supermarket_of_platform_target_tv_red"
                                android:textSize="24sp"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/item_finance_supermarket_of_platform_target_tv_jiaxi_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="@string/keep_accounts_btn_per_cent"
                                android:textColor="@color/item_finance_supermarket_of_platform_target_tv_red"
                                android:textSize="14sp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/item_finance_supermarket_of_platform_target_tv_jiaxi_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_finance_supermarket_of_platform_target_tv_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/item_finance_supermarket_of_platform_target_tv_num_black"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/item_finance_supermarket_of_platform_target_tv_period_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="个月"
                            android:textColor="@color/item_finance_supermarket_of_platform_target_tv_gray"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_finance_supermarket_of_platform_target_tv_period_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="right"
                        android:gravity="right|bottom"
                        android:text="@string/finance_supermarket_target_list_period_info"
                        android:textColor="@color/item_finance_supermarket_of_platform_target_tv_gray"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_line"/>

</LinearLayout>