<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/arrm_item_ll"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/selector_color_bg_gray_white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <!--1-->
    <TextView
        android:id="@+id/arrm_item_return_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingLeft="15dp"
        android:text="2015-09-15"
        android:textColor="@color/d"
        android:textSize="14sp"
        />
    <!--2-->
    <LinearLayout
        android:id="@+id/arrm_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal">
        <!--2-1-->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cal_share_my_mobel_image_bg">

            <ImageView
                android:id="@+id/arrm_item_p_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:src="@mipmap/pic_021"/>

            <TextView
                android:id="@+id/tv_return_money_custom_logo"
                android:visibility="gone"
                android:text="优品未来"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        </FrameLayout>
        <!--2-2-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:paddingBottom="6dp"
            android:layout_marginRight="8dp"
            android:paddingTop="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/arrm_item_p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPmoney"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/c"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:id="@+id/arrm_item_auto_tally_tag"
                    android:layout_width="35dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/auto_tally_tag"/>
            </LinearLayout>

            <TextView
                android:id="@+id/arrm_item_project_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:text="红木家具资金周转"
                android:textColor="@color/d"
                android:textSize="12sp"
                />
        </LinearLayout>

        <!--2-3-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arrm_item_total"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="￥2402.72"
                android:textColor="@color/a"
                android:textSize="17sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第"
                    android:textColor="@color/d"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/arrm_item_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="8/10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="期"
                    android:textColor="@color/d"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f"/>

    <!--3-->
    <LinearLayout
        android:id="@+id/arrm_item_yuqi_yihui"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/arrm_item_yihui"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/b"
            android:text="@string/adapter_txt_been_back"
            android:textColor="@color/h"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/arrm_item_yuqi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/a"
            android:text="@string/adapter_txt_overdue"
            android:textColor="@color/h"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
