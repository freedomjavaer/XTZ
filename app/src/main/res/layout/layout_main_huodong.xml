<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/main_huodong_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:src="@mipmap/pic_huodong_hide"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/main_huodong_pic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@mipmap/pic_huodong_1"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/main_huodong_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@mipmap/pic_huodong_2"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_huodong_pic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@mipmap/pic_huodong_3"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/main_huodong_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@mipmap/pic_huodong_box_big"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
