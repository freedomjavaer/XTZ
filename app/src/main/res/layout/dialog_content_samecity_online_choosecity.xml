<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/choose_city_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="选择您想进入的城市"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <RadioGroup
        android:id="@+id/rg_cities"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/city_beijing"
            style="@style/SameCityOnlineChooseCityItem"
            android:text="北京"/>

        <RadioButton
            android:id="@+id/city_shanghai"
            style="@style/SameCityOnlineChooseCityItem"
            android:text="上海"/>

        <RadioButton
            android:id="@+id/city_guangzhou"
            style="@style/SameCityOnlineChooseCityItem"
            android:text="广州"/>

        <RadioButton
            android:id="@+id/city_shenzhen"
            style="@style/SameCityOnlineChooseCityItem"
            android:text="深圳"/>
    </RadioGroup>

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/cd_selector_btn_primary"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="确认"
        android:textColor="@color/cd_btn_text"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="注意：城市选定后不可变更"
        android:textColor="@color/holo_red_dark"
        android:textSize="14sp"/>

</LinearLayout>
