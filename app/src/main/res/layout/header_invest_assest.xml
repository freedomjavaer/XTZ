<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_assets_header_content"
        android:layout_width="match_parent"
        android:background="@color/style_current_title"
        android:layout_height="200dp"/>

    <LinearLayout
        android:id="@+id/ll_invest_assets_point_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/ll_no_data_view"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_invest_assets_point_container"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_color_bg_gray_trans"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="暂无数据"
            android:textColor="#3DB5E6"
            android:textSize="16sp"/>

    </LinearLayout>


</RelativeLayout>