<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_item_invest_by_date"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_color_bg_gray_white"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_bid_returned_detail_month_day"
                android:layout_width="50dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="4/23"
                android:textColor="@color/c"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_bid_returned_detail_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tv_bid_returned_detail_month_day"
                android:layout_toLeftOf="@+id/tv_bid_returned_detail_percent"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="回款100.22元"
                android:textColor="@color/c"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/tv_bid_returned_detail_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="第5/5期"
                android:textColor="@color/d"
                android:textSize="12sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_bid_returned_detail_year"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="2015年"
                android:gravity="center"
                android:textColor="@color/d"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_bid_returned_detail_benjin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="本金100元"
                android:singleLine="true"
                android:textColor="@color/d"
                android:textSize="14sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_bid_returned_detail_shouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="收益100元"
                android:singleLine="true"
                android:textColor="@color/d"
                android:textSize="14sp"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_single_bid_operation"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_bid_returned_detail_operation"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_back_money_status_change_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="待确认"
            android:textColor="@color/white"
            android:textSize="13sp"/>

    </RelativeLayout>

</LinearLayout>
