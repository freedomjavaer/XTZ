<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myinfo_bg_color"
    android:orientation="vertical">

    <include layout="@layout/top_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <!--设置-->
        <RelativeLayout
            android:id="@+id/layout_item_wallet"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="?android:selectableItemBackground">

            <ImageView
                style="@style/me_framgment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xtz_wallet"/>

            <TextView
                style="@style/me_framgment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_info_small_wallet"
                android:textColor="@color/c"
                android:textSize="16sp"/>

            <ImageView
                style="@style/me_framgment_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/btn_009"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/myinfo_bg_color"/>

        <!--设置-->
        <RelativeLayout
            android:id="@+id/layout_item_setting"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="?android:selectableItemBackground">

            <ImageView
                style="@style/me_framgment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/me_setting_icon"/>

            <TextView
                style="@style/me_framgment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_txt_payment_reminder"
                android:textColor="@color/c"
                android:textSize="16sp"/>

            <ImageView
                style="@style/me_framgment_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/btn_009"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myinfo_bg_color"/>
        <!-- 我的关注-->
        <RelativeLayout
            android:id="@+id/layout_item_myfocus"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="?android:selectableItemBackground">

            <ImageView
                style="@style/me_framgment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon2_nor"/>

            <TextView
                style="@style/me_framgment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_txt_my_focus"/>

            <ImageView
                style="@style/me_framgment_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/btn_009"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/myinfo_bg_color"/>

        <!-- 分享邀请码-->
        <RelativeLayout
            android:id="@+id/layout_item_share_invitecode"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="?android:selectableItemBackground">

            <ImageView
                style="@style/me_framgment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon3_nor"/>


            <TextView
                style="@style/me_framgment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_txt_share_invitation_code"/>

            <ImageView
                style="@style/me_framgment_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/btn_009"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myinfo_bg_color"/>
        <!-- 优惠活动-->
        <RelativeLayout
            android:id="@+id/layout_item_huodong"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="?android:selectableItemBackground">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true">

                <ImageView
                    style="@style/me_framgment_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon4_nor"/>

                <TextView
                    android:id="@+id/layout_item_huodong_title"
                    style="@style/me_framgment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_txt_promotions"
                    android:textColor="@color/c"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:id="@+id/layout_item_huodong_layout_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/layout_item_huodong_title"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_me_xiaoyuanquan_red"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/layout_item_huodong_layout_hint_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/h"
                        android:textSize="10sp"/>
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                style="@style/me_framgment_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/btn_009"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/myinfo_bg_color"/>

        <!-- 给我们提意见-->
        <RelativeLayout
            android:id="@+id/layout_item_advice"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="?android:selectableItemBackground">

            <ImageView
                style="@style/me_framgment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/question_feedback"/>

            <TextView
                style="@style/me_framgment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_txt_give_us_advice"
                android:textColor="@color/c"
                android:textSize="16sp"/>

            <ImageView
                style="@style/me_framgment_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/btn_009"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>