<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/ll_question_feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_question_feedback_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_question_feedback_arrow"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_018"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f"/>

        <TextView
            android:id="@+id/tv_question_feedback_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/invest_fenbu_item_bg"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </RelativeLayout>

    <View
        android:background="@color/f"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
