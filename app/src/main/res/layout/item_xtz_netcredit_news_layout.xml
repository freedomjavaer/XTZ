<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_net_credit_news_item"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="?android:selectableItemBackground">

    <ImageView
        android:id="@+id/iv_xtz_news_item_icon"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_marginLeft="9dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_xtz_news_item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_xtz_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/c"
            android:textSize="15sp"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_xtz_news_item_content"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tv_xtz_news_item_title"-->
            <!--android:ellipsize="end"-->
            <!--android:maxLines="2"-->
            <!--android:minLines="2"-->
            <!--android:text="内容"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:textColor="@color/d"-->
            <!--android:textSize="13sp"/>-->
        <!--<View-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"/>-->

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="来源"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_news_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-1-1"/>

            <TextView
                android:id="@+id/tv_xtz_news_item_readnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="9dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="300"
                android:textColor="@color/d"
                android:textSize="12sp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>


