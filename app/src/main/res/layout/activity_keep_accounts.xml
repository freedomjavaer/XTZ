<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/top_title"/>

    <include layout="@layout/layout_no_data_view"/>

    <LinearLayout
        android:id="@+id/activity_keep_accounts_ll_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/activity_keep_accounts_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:focusableInTouchMode="false"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/keep_accounts_bg"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/keep_accounts_spacing"/>

                <LinearLayout
                    android:id="@+id/activity_keep_accounts_ll_choose_platform"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keep_accounts_platform_name"
                        android:textColor="@color/keep_accounts_text_value"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/activity_keep_accounts_tv_show_choose_platform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:hint="@string/keep_accounts_hint_choose_platform"
                        android:maxLength="10"
                        android:textColor="@color/keep_accounts_text_value"
                        android:textColorHint="@color/keep_accounts_text_hint"
                        android:textSize="15sp"/>

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/btn_009"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/keep_accounts_line"/>

                <LinearLayout
                    android:id="@+id/activity_keep_accounts_ll_choose_value_date"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keep_accounts_value_date"
                        android:textColor="@color/keep_accounts_text_value"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/activity_keep_accounts_tv_show_choose_value_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:textColor="@color/keep_accounts_text_value"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/activity_keep_accounts_tv_show_choose_value_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/keep_accounts_text_value"
                        android:textSize="12sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/keep_accounts_line"/>

                <LinearLayout
                    android:id="@+id/activity_keep_accounts_ll_object_name"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keep_accounts_object_name"
                        android:textColor="@color/keep_accounts_text_value"
                        android:textSize="15sp"/>

                    <EditText
