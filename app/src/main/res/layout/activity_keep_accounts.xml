                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/keep_accounts_spacing"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="@string/keep_accounts_due_automatic_repayment_note"
                    android:textColor="@color/keep_accounts_text_key"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/activity_keep_accounts_et_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top|left"
                        android:hint="@string/keep_accounts_hint_note"
                        android:minHeight="120dp"
                        android:padding="13dp"
                        android:textColorHint="@color/keep_accounts_text_hint"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/activity_keep_accounts_tv_note_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/activity_keep_accounts_et_note"
                        android:layout_alignParentRight="true"
                        android:layout_margin="13dp"
                        android:text="0/50"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0">

        <Button
            android:id="@+id/activity_keep_accounts_bt_keep_again"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/keep_accounts_btn_keep_again"
            android:text="保存再记"
            android:textColor="@color/h"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/activity_keep_accounts_bt_keep"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/keep_accounts_btn_keep"
            android:text="保存"
            android:textColor="@color/h"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>