                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:background="@null"
                            android:hint="@string/keep_accounts_hint_optional_content"
                            android:textColor="@color/keep_accounts_text_value"
                            android:textColorHint="@color/keep_accounts_text_hint"
                            android:textSize="15sp"/>

                        <TextView
