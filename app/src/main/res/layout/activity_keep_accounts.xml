                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/keep_accounts_text_value"
                            android:textSize="15sp"
                            android:visibility="invisible"/>

                    </LinearLayout>

                    <com.ypwl.xiaotouzi.view.RadioTab
                        android:id="@+id/activity_keep_accounts_rt_period"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"/>

                </LinearLayout>

                <View
                    android:id="@+id/activity_keep_accounts_line_year_day_num"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/keep_accounts_line"/>

                <RelativeLayout
                    android:id="@+id/activity_keep_accounts_rl_year_day_num"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/keep_accounts_year_day_num"
                        android:textColor="@color/keep_accounts_text_value"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/activity_keep_accounts_iv_year_day_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/btn_046"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/keep_accounts_line"/>

                <LinearLayout
                    android:id="@+id/activity_keep_accounts_ll_choose_repayment_method"
