                            android:layout_marginLeft="17dp"
                            android:background="@null"
                            android:hint="@string/keep_accounts_hint_required_content"
                            android:maxLength="2"
                            android:textColor="@color/keep_accounts_text_value"
                            android:textColorHint="@color/keep_accounts_text_hint"
                            android:textSize="15sp"/>

                        <TextView
