<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="123dp"
              android:background="@color/style_current_title"
              android:clickable="false"
              android:minHeight="123dp"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="累计收益"
            android:textColor="@color/investassets_color"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_history_header_earnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="15,883.456"
            android:textColor="@color/finance_supermarket_yellow"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="加权年化率"
            android:textColor="@color/investassets_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_history_header_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="15.5%"
            android:textColor="@color/finance_supermarket_yellow"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>