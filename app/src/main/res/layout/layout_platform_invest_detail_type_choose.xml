<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/all_term_choose_bg"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/tv_platform_invest_detail_ing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wait_return_term_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="在投标的"
            android:textColor="@drawable/type_textcolor_selector"
            android:textSize="13sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bg_primary"/>

        <TextView
            android:id="@+id/tv_platform_invest_detail_overdue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/over_date_term_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="往期标的"
            android:textColor="@drawable/type_textcolor_selector"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_platform_invest_detail_sync_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:visibility="invisible"
        android:textColor="@color/d"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/ll_platform_invest_detail_sync_ing"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp">

        <ProgressBar
            android:id="@+id/layout_no_data_view_layout_hint_pb_loading"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="12sp"
            android:textColor="@color/d"
            android:text="同步中..."/>
    </LinearLayout>
</RelativeLayout>
