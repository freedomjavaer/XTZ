<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/invest_fenbu_platform_piechart"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_invest_fenbu_returned_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="还款方式"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_money_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_type_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,000"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_type_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".00"
            android:textColor="#333333"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_money_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="投资总额"
        android:textColor="#828282"
        android:textSize="12sp"/>

</RelativeLayout>
