<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_auto_tally_p_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99CCCCCC"
        android:paddingLeft="23dp"
        android:text=""
        android:textColor="@color/d"
        android:textSize="14sp"/>

    <View
        android:id="@+id/iv_item_auto_tally_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_item_auto_tally_logo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/cal_share_my_mobel_image_bg"
            android:padding="1dp"
            android:src="@mipmap/pic_021"/>

        <ImageView
            android:id="@+id/iv_item_auto_tally_bind_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/tianjia"/>

        <TextView
            android:id="@+id/tv_item_auto_tally_p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@id/iv_item_auto_tally_bind_tag"
            android:layout_toRightOf="@id/iv_item_auto_tally_logo"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="诚汇通"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </RelativeLayout>

</LinearLayout>
