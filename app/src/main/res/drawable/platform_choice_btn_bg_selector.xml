<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">//定义当button 处于pressed 状态时的形态。
        <shape>
            <solid android:color="#04A9D9"/>
            <corners android:radius="3dp"/>
            <padding android:bottom="2dp" android:left="6dp"
                     android:right="6dp" android:top="2dp"/>
        </shape>
    </item>
    <item android:state_checked="true">//定义当button 处于checked 状态时的形态。
        <shape>
            <solid android:color="#04A9D9"/>
            <corners android:radius="3dp"/>
            <padding android:bottom="2dp" android:left="6dp"
                     android:right="6dp" android:top="2dp"/>
        </shape>
    </item>
    <item>//定义其他情况button的形态
        <shape>
            <solid android:color="@color/h"/>
            <stroke android:width="1dp" android:color="#04A9D9"/>
            <corners android:radius="3dp"/>
            <padding android:bottom="2dp" android:left="6dp"
                     android:right="6dp" android:top="2dp"/>
        </shape>
    </item>


</selector>