<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/e" />
            <stroke android:width="1dp" android:color="@color/b" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>//定义其他情况button的形态
        <shape>
            <solid android:color="@color/h" />
            <stroke android:width="1dp" android:color="@color/b" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>